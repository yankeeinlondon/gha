{
  "name": "gh-npm-release",
  "version": "0.5.3",
  "description": "Reusable Github workflow which publishes pnpm library code to npm",
  "scripts": {
    "test": "vitest --passWithNoTests",
    "test:workflows": "vitest run tests/workflows --passWithNoTests",
    "build": "echo no build script needed",
    "build:workflows": "tsx src/builders/cli.ts build",
    "build:watch": "tsx src/builders/cli watch",
    "build:actions": "tsx src/builders/cli build --type action --output .github/actions",
    "validate:templates": "node src/builders/cli.js validate",
    "init:template": "node src/builders/cli.js generate",
    "list:templates": "node src/builders/cli.js list",
    "audit:fix": "pnpm audit --fix && pnpm install",
    "release": "run-s audit:fix release:bump",
    "release:bump": "bumpp"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yankeeinlondon/gha.git"
  },
  "keywords": [
    "github-actions"
  ],
  "author": "Ken Snyder <ken@ken.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yankeeinlondon/gha/issues"
  },
  "homepage": "https://github.com/yankeeinlondon/gha#readme",
  "devDependencies": {
    "@antfu/eslint-config": "^4.15.0",
    "@type-challenges/utils": "^0.1.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "22",
    "@vitest/ui": "^3.2.4",
    "bumpp": "^10.2.0",
    "eslint": "^9.29.0",
    "eslint-plugin-format": "^1.0.1",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "jq": "^1.7.2",
    "js-yaml": "^4.1.0",
    "json-schema-to-typescript": "^15.0.0",
    "npm-run-all": "^4.1.5",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "xmlhttprequest@<1.7.0": ">=1.7.0",
      "jsdom@<=16.4.0": ">=16.5.0",
      "postcss@<8.4.31": ">=8.4.31",
      "semver@<5.7.2": ">=5.7.2",
      "tough-cookie@<4.1.3": ">=4.1.3",
      "vite@>=3.0.2 <3.2.7": ">=3.2.7",
      "word-wrap@<1.2.4": ">=1.2.4",
      "vite@>=5.0.0 <5.0.5": ">=5.0.5",
      "vite@>=5.0.0 <=5.0.11": ">=5.0.12",
      "micromatch@<4.0.8": ">=4.0.8"
    }
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "chokidar": "^4.0.3",
    "commander": "^14.0.0",
    "diff": "^7.0.0",
    "yaml": "^2.6.1"
  },
  "optionalDependencies": {
    "@oclif/plugin-not-found": "^3.2.31",
    "act": "^1.6.2"
  }
}
